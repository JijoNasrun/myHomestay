<h1>Users#new</h1>
<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :user, url: users_path  do |f| %>
      <p><%= f.label :name %>
      <%= f.text_field :name %></p>

      <p><%= f.label :email %> <%= f.email_field :email %></p>
     
      <p><%= f.label :password %><%= f.password_field :password %></p>
      

      <p><%= f.label :password_confirmation, "Confirmation" %> <%= f.password_field :password_confirmation %></p>
     

      <p><%= f.label :address %><%= f.text_field :address %></p>
      

      <p><%= f.label :postcode %><%= f.text_field :postcode %></p>
      

      <p><%= f.collection_select :state, @states, :id, :state_name %></p>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
