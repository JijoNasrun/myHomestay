<% provide(:title, "Create A Booking") %>
<h1>Create A Booking</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :homestay, url: homestay_create_path do |f| %>
      <p><%= f.label :address %>
      <%= f.text_field :address %></p>

      <p><%= f.label :postcode %> <%= f.text_field :postcode %></p>
     
      <p><%= f.collection_select :state, @states, :id, :state_name %></p>
           
      <p><%= f.label :price %><%= f.text_field :price %></p>
     
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
